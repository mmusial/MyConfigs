
filetype plugin indent on
syntax on

set bg=dark

" turn of swap files
set noswapfile
set nobackup
set nowb

" Intendations
set cindent
set autoindent
set smartindent
set smarttab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set noexpandtab

set nowrap
set linebreak

if has('gui_running')
  set guifont=Ubuntu\ Mono:h12
endif
